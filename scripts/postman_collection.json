{
    "info": {
        "name": "EgyAkin Push Notifications Testing",
        "description": "Collection for testing push notification endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{auth_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "your-auth-token-here",
            "type": "string"
        },
        {
            "key": "test_fcm_token",
            "value": "dGVzdF90b2tlbl9hYmNkZWZnaGlqa2xtbm9wcXJzdHV2d3h5ejEyMzQ1Njc4OTBfYWJjZGVmZ2hpamtsbW5vcHFyc3R1dnd4eXoxMjM0NTY3ODkwX2FiY2RlZmdoaWprbG1ub3BxcnN0dXZ3eHl6MTIzNDU2Nzg5MA",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"fcmToken\": \"{{test_fcm_token}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "FCM Token Management",
            "item": [
                {
                    "name": "Store FCM Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"{{test_fcm_token}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/storeFCM",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "storeFCM"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Store Invalid FCM Token (Test Validation)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"invalid-short-token\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/storeFCM",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "storeFCM"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Push Notifications",
            "item": [
                {
                    "name": "Send Custom Notification",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Test Notification 🧪\",\n  \"body\": \"This is a test notification sent from Postman at {{$timestamp}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/send-notification",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "send-notification"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Send Predefined Notification (All Users)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/sendAllPushNotification",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "sendAllPushNotification"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Test Push Notification (Admin Only)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/send-notification",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "send-push-notification-test"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Notification Validation Tests",
            "item": [
                {
                    "name": "Send Notification - Missing Title",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"body\": \"This should fail due to missing title\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/send-notification",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "send-notification"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Send Notification - Missing Body",
                    "request": {
                        "method": "POST",
