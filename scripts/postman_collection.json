                {
                    "name": "Send Notification - Title Too Long",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"This is a very long title that exceeds the maximum allowed length for push notification titles and should be rejected by the validation rules because it is way too long for a notification title which should be concise and short\",\n  \"body\": \"Test body\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/send-notification",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "send-notification"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
